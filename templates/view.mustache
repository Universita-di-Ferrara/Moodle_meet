<p>Cliccare sul pulsante per entrare nella stanza di Google meet<p>

<a
    name=""
    id=""
    class="btn btn-primary"
    href={{meetingUrl}}
    role="button"
    >Entra nella stanza</a
>
<form class="d-flex" action="sync_recordings.php" method="post">
    <input type="hidden" name="meet_code" value="{{meetingCode}}">
    <input type="hidden" name="instance_id" value="{{instanceId}}">
    <button type="submit"
        name=""
        id=""
        class="btn btn-primary"
        data-action="mod_gmeet/sync_recordings"
        role="button"
        >Sincronizza ultime registrazioni</button>
    
</form>

<div
class="table-responsive recordings-table rounded-3"
>
<table
class="table table-primary "
>
<thead>
    <tr>
        <th scope="col">Link</th>
        
    </tr>
</thead>
<tbody class="recordings_tbody">
            {{#meetingRecordings}}
            <tr class="">
                <td scope="row"><a
                    name=""
                    id=""
                    class="btn btn-primary"
                    href="{{.}}"
                    role="button"
                    >Registrazione</a
                >
            </td>
        </tr>
        {{/meetingRecordings}}
        </tbody>
    </table>
</div>


